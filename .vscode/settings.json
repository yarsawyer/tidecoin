{
    "C_Cpp.intelliSenseEngine": "disabled",
    "C_Cpp.errorSquiggles": "disabled",
    "C_Cpp.autocomplete": "disabled",
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceFolder}/build_dev_mode",
        "--background-index",
        "--clang-tidy",
